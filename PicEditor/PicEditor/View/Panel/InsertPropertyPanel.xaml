<UserControl x:Class="PicEditor.View.Panel.InsertPropertyPanel"
             x:ClassModifier="internal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PicEditor.View.Panel"
             xmlns:vm="clr-namespace:PicEditor.ViewModel"
             DataContext="{x:Static vm:VmLocator.InsertPicture}">
    <StackPanel Margin="10,0,10,0" HorizontalAlignment="Left">
        <TextBlock Text="Left" Margin="0,10,0,3"/>
        <TextBox Width="120" Height="26" VerticalContentAlignment="Center" InputMethod.IsInputMethodEnabled="False"
                 Text="{Binding Position.RealLeft,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
        <TextBlock Text="Top" Margin="0,10,0,3"/>
        <TextBox Width="120" Height="26" VerticalContentAlignment="Center" InputMethod.IsInputMethodEnabled="False"
                 Text="{Binding Position.RealTop,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
        <TextBlock Text="Width" Margin="0,10,0,3"/>
        <TextBox Width="120" Height="26" VerticalContentAlignment="Center" InputMethod.IsInputMethodEnabled="False"
                 Text="{Binding Position.RealWidth,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
        <TextBlock Text="Height" Margin="0,10,0,3"/>
        <TextBox Width="120" Height="26" VerticalContentAlignment="Center" InputMethod.IsInputMethodEnabled="False"
                 Text="{Binding Position.RealHeight,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
        <Button Width="80" Height="30" Content="确定" HorizontalAlignment="Left" Margin="0,10,0,0" IsEnabled="False"/>
    </StackPanel>
</UserControl>

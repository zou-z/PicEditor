<Application x:Class="PicEditor.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PicEditor"
             xmlns:converter="clr-namespace:PicEditor.Converter"
             xmlns:system="clr-namespace:System;assembly=netstandard"
             StartupUri="View/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <system:Boolean x:Key="TrueValue">True</system:Boolean>
            <system:Boolean x:Key="FalseValue">False</system:Boolean>
            <converter:LeftToMarginConverter x:Key="leftToMarginConverter"/>
            <converter:MultiBoolConverter x:Key="multiBoolConverter"/>
            <converter:OpenPictureConverter x:Key="openPictureConverter"/>
            <converter:BoolVisibilityConverter x:Key="boolVisibilityConverter"/>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Style/StyleConfig.xaml"/>
                <ResourceDictionary Source="Style/IconResource.xaml"/>
                <ResourceDictionary Source="Style/ScrollViewer.xaml"/>
                <ResourceDictionary Source="Style/Button.xaml"/>
                <ResourceDictionary Source="Style/CheckBox.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
